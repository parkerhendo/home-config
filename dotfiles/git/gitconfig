[core]
  quotepath = false
  pager = less -x2
  safecrlf = false
  excludefile = ~/.gitignore_global
  editor = "nvim"

[include]
  path = ~/.gitalias.txt

[push]
  default = current
  autoSetupRemote = true
  followTags = true

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  syntax-theme = Nord
  light = false

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default
[init]
	defaultBranch = main
[submodule]
	recurse = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[credential]
	helper = osxkeychain

